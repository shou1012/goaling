<script src="/scripts/jquery.easypiechart.min.js"></script>
<script src="/scripts/animatedModal.min.js"></script>
<script>
  $(function() {
    // $("#menu").animatedModal();
    $("#menu").animatedModal({
      animatedIn:'fadeInDown',
      animatedOut:'fadeOutUp',
      animationDuration:'1s',
      color: '#363333'
    });
    $('.chart').easyPieChart({
        barColor:'#e16428',
				scaleColor:false,
				lineWidth:50,
				lineCap:'circle',
        size: 200
    });
  });
</script>
</html>
